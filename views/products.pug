extends layout/_base  
block content 
     .container
            h1= pageTitle 
            p= description

            // product list
            .grid.grid-cols-5.gap-3 
                each product in products 
                    .group.p-3.my-10.flex.w-full.flex-col.self-center.overflow-hidden.rounded-lg.border.bg-white.shadow-md(class='border-gray-100/30')
                        a.relative.mx-3.mt-3.flex.h-60.overflow-hidden.rounded-xl(href=`/products/${product.id}`)
                            img.peer.absolute.top-0.right-0.h-full.w-full.object-cover(src=`${product.imageURL}` alt='product image')
                        .mt-4.px-5.pb-5
                        a(href=`/products/${product.id}`)
                            h5.text-xl.tracking-tight.text-black= product.title
                        .mt-2.mb-5.flex.items-center.gap-x-2
                            span.text-3xl.font-bold.text-black= `$${ product.price}`
                            span.text-sm.text-black.line-through= `$${ product.price + 32}`
                        a.flex.items-center.justify-center.rounded-md.border.border-transparent.bg-black.px-5.text-center.text-sm.font-medium.text-white(href='#' class='hover:border-white/40 py-2.5 focus:outline-none focus:ring-4 focus:ring-blue-300')
                            svg.mr-2.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor' stroke-width='1.5')
                                path(stroke-linecap='round' stroke-linejoin='round' d='M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z')
